[alias]
    amend = commit --amend
    branches = branch --all
    count = rev-list HEAD --count
    forget = rm --cached
    graph = log --graph --pretty=format:'%C(bold red)[%C(auto)%h%C(bold red)]%C(reset) \"%s\"%C(auto)%d%C(reset)\n  %C(yellow)â””%C(reset) %C(green)(%cr)%C(reset) by %C(bold blue)<%an>%C(reset)\n' --abbrev-commit --date-order
    remotes = remote -v
    remove = reset HEAD --

[credential]
    helper = store

[commit]
    gpgsign = true

[core]
    autocrlf = input

    # If you are using UNIX
    #
    filemode = true

    # If you are using Windows
    #
    # filemode = false

    hooksPath = ~/.git-hooks

[init]
    defaultBranch = master

[pull]
    rebase = false

[push]
    default = simple

[user]
    name = <first name> <last name>
    email = <e-mail address>
    signingkey = <gpg key>
